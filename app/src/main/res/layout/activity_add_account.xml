<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="manhquan.khoaluan_quanly.AddAccountActivity">

    <TextView
        android:id="@+id/add_account_txtEmployeeName"
        android:text="@string/add_account_EmployeeName"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_account_editEmployeeName"
        android:theme="@style/FirebaseUI.TextInputEditText.NameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_account_txtEmployeeUsername"
        android:text="@string/add_account_EmployeeUsername"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_account_editEmployeeUsername"
        android:theme="@style/FirebaseUI.TextInputEditText.EmailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_account_txtEmployeePassword"
        android:text="@string/add_account_EmployeePassword"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_account_editEmployeePassword"
        android:inputType="textPassword"
        android:theme="@style/FirebaseUI.TextInputEditText.PasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_account_txtEmployeeContactNumber"
        android:text="@string/add_account_EmployeeContactNumber"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_account_editEmployeeContactNumber"
        android:theme="@style/FirebaseUI.TextInputEditText.PhoneField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_account_txtEmployeePosition"
        android:text="@string/add_account_EmployeePosition"
        style="@style/TextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/add_account_spinnerEmployeePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/add_account_button_create"
            android:text="@string/add_account_button_create"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
