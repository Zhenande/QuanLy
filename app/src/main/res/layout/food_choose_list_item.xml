<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/food_choose_stt"
        android:text="@string/fobID"
        style="@style/TextBlack"
        android:layout_weight="1.65"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/food_choose_name"
        android:text="@string/food_detail_text_name"
        style="@style/TextBlack"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/food_choose_price"
        android:text="@string/food_detail_text_price"
        style="@style/TextBlack"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1.45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/food_choose_sub"
            android:background="@color/white"
            android:src="@drawable/ic_sub"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/food_choose_quantity"
            android:inputType="numberDecimal"
            style="@style/FirebaseUI.TextInputEditText"
            android:gravity="center"
            android:textColor="@drawable/edit_text_color"
            android:enabled="false"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/food_choose_sum"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

</LinearLayout>