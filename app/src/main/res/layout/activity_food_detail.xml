<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="manhquan.khoaluan_quanly.FoodDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/food_detail_text_image"
                style="@style/TextBlack"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="150dp" />

            <ImageView
                android:id="@+id/food_detail_image"
                android:scaleType="fitXY"
                android:layout_marginStart="100dp"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <Button
                android:id="@+id/food_detail_gallary_pick"
                android:layout_marginStart="50dp"
                style="@style/TextStyle"
                android:text="@string/food_detail_button_galary_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/food_detail_camera"
                android:layout_marginStart="10dp"
                style="@style/TextStyle"
                android:text="@string/food_detail_button_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:text="@string/food_detail_text_name"
            style="@style/TextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/food_detail_name"
            android:theme="@style/FirebaseUI.TextInputEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/food_detail_text_price"
            style="@style/TextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/food_detail_price"
            android:theme="@style/FirebaseUI.TextInputEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/food_detail_text_description"
            style="@style/TextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/food_detail_description"
            android:minLines="10"
            android:theme="@style/FirebaseUI.TextInputEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/food_detail_text_type"
            style="@style/TextBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/food_detail_food_type"
            android:theme="@style/FirebaseUI.TextInputEditText"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/food_detail_button_add"
                android:text="@string/button_create"
                style="@style/TextStyle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
